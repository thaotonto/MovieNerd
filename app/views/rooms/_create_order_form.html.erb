<%= form_for @order, url: "/orders", html: {onsubmit: "bookSeats()"}, remote: true do |f| %>

  <%= hidden_field_tag :movie_id, support.movie_id %>
  <%= hidden_field_tag :screening_id, support.screening_id %>
  <%= hidden_field_tag :room_id, support.room_id %>
  <%= hidden_field_tag :selected_seats %>

  <%= f.submit t("rooms.pay"), class: "btn btn-primary" %>
<% end %>
